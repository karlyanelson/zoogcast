---
layout: layout_base.njk
---
<article class="post" itemscope itemtype="http://schema.org/BlogPosting">

	<img src="/images/{{img}} " alt="" class="post-img" />

  <header class="post-header">
    <h1 class="title-1 mt-10 mb-6" itemprop="name headline">{{ title | escape }}</h1>
    <p class="text-center font-italic text-sm">
      <time datetime="{{ date }}" itemprop="datePublished">
        {{ date }}
      </time>
      {% if author %}
        • <span itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name">{{ author }}</span></span>
      {% endif %}
    </p>
  </header>

	<div class="mb-12 mt-8" itemprop="articleBody">
    {{ content | safe }}
  </div>

	{% if episodeID %}
		<iframe style="border: none" src="//html5-player.libsyn.com/embed/episode/id/{{ episodeID }}/height/90/theme/custom/autoplay/no/autonext/no/thumbnail/yes/preload/no/no_addthis/no/direction/backward/render-playlist/no/custom-color/5d3aa9/" height="90" width="100%" scrolling="no"  allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
	{% endif %}

</article>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

<nav aria-label="Next and Previous Posts" class="text-center space-x-4 mt-10">
	{% if previousPost %}<a class="text-left"  href={{ previousPost.url }}>← Previous Episode</a>{% endif %}
	{% if nextPost %}<a class="text-right" href={{ nextPost.url }}>Next Episode →</a>{% endif %}
</nav>
